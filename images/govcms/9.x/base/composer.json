{
    "name": "govcms/govcms",
    "description": "GovCMS Drupal Distribution.",
    "keywords": ["GovCMS"],
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.govcms.gov.au",
    "support": {
        "issues:": "https://github.com/govCMS/GovCMS/issues",
        "wik": "https://github.com/govCMS/GovCMS/wiki",
        "source": "https://github.com/govCMS/GovCMS/releases"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "allowlist"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "drupal/core-composer-scaffold": "^9",
        "govcms/allowlist": "self.version",
        "govcms/core": "dev-master",
        "webflo/drupal-finder": "^1.2"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "/app"
            }
        },
        "installer-paths": {
            "/app/web/core": ["type:drupal-core"],
            "/app/web/libraries/{$name}": ["type:drupal-library"],
            "/app/web/modules/contrib/{$name}": ["type:drupal-module"],
            "/app/web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "/app/web/themes/contrib/{$name}": ["type:drupal-theme"],
            "/app/drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "/app/web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "/app/web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "GovCMS\\composer\\": "src/composer"
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "GovCMS\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "GovCMS\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "GovCMS\\composer\\ScriptHandler::createRequiredFiles",
            "rsync -av --delete --exclude 'web' --exclude '.git' --exclude 'vendor' ./ web/profiles/govcms"
        ],
        "post-update-cmd": [
            "GovCMS\\composer\\ScriptHandler::createRequiredFiles",
            "rsync -av --delete --exclude 'web' --exclude '.git' --exclude 'vendor' ./ web/profiles/govcms"
        ],
        "nuke": "rm -r -f composer.lock bin web vendor"
    },
    "suggest": {
        "hirak/prestissimo": "^0.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
